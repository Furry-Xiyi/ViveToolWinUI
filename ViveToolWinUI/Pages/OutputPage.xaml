<Page
    x:Class="ViveToolWinUI.Pages.OutputPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ViveToolWinUI.Pages">
    <Grid Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Spacing="12">
            <TextBlock Text="执行输出" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
        </StackPanel>

        <Border Grid.Row="2" Padding="8" CornerRadius="6">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="txtFullOutput" AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True" BorderThickness="0" Background="Transparent" />
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button x:Name="btnCopyOutput" Content="复制输出" Click="BtnCopyOutput_Click" />
            <Button x:Name="btnSaveOutput" Content="保存到文件" Click="BtnSaveOutput_Click" />
            <Button x:Name="btnClose" Content="返回" Click="BtnClose_Click" />
        </StackPanel>
    </Grid>
</Page>