<Page
    x:Class="ViveToolWinUI.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer Padding="15" VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="32" HorizontalAlignment="Stretch">

            <!-- 外观与材质组 -->
            <StackPanel Spacing="12">
                <TextBlock Text="外观与材质" FontSize="20" FontWeight="SemiBold"/>

                <!-- 应用主题 -->
                <Expander Header="应用主题" IsExpanded="False">
                    <StackPanel Spacing="8" Padding="12,0,0,12">
                        <RadioButton x:Name="ThemeSystem" Content="跟随系统" Checked="Theme_Checked"/>
                        <RadioButton x:Name="ThemeLight" Content="浅色" Checked="Theme_Checked"/>
                        <RadioButton x:Name="ThemeDark" Content="深色" Checked="Theme_Checked"/>
                    </StackPanel>
                </Expander>

                <!-- 背景材质 -->
                <Expander Header="背景材质" IsExpanded="False">
                    <StackPanel Spacing="8" Padding="12,0,0,12">
                        <RadioButton x:Name="MaterialAcrylic" Content="Acrylic" Checked="Material_Checked"/>
                        <RadioButton x:Name="MaterialMica" Content="Mica" Checked="Material_Checked"/>
                        <RadioButton x:Name="MaterialMicaAlt" Content="MicaAlt" Checked="Material_Checked"/>
                    </StackPanel>
                </Expander>
            </StackPanel>

            <!-- 行为组 -->
            <StackPanel Spacing="12">
                <TextBlock Text="行为" FontSize="20" FontWeight="SemiBold"/>
                <ToggleSwitch x:Name="RunOnStartupToggle" Header="开机自启" Toggled="RunOnStartupToggle_Toggled"/>
                <ToggleSwitch x:Name="AutoConnectToggle" Header="启动时自动连接" Toggled="AutoConnectToggle_Toggled"/>
            </StackPanel>

            <!-- ViveTool 内核 -->
            <StackPanel Spacing="12">
                <TextBlock Text="ViveTool 内核" FontSize="20" FontWeight="SemiBold"/>
                <Expander Header="检测更新" IsExpanded="True">
                    <StackPanel Spacing="8" Padding="12,0,0,12">
                        <Button Content="检测更新" Click="CheckViveToolUpdate_Click" Width="120"/>
                    </StackPanel>
                </Expander>
                <ToggleSwitch x:Name="AutoUpdateViveToolToggle" Header="自动更新 ViveTool 内核" Toggled="AutoUpdateViveToolToggle_Toggled"/>
            </StackPanel>

            <!-- 关于 -->
            <StackPanel Spacing="12">
                <TextBlock Text="关于" FontSize="20" FontWeight="SemiBold"/>
                <Expander Header="应用信息" IsExpanded="False">
                    <StackPanel Spacing="8" Padding="12,0,0,12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Image x:Name="AppLogo" Width="32" Height="32"/>
                            <StackPanel>
                                <TextBlock x:Name="AppTitle" FontSize="18" FontWeight="SemiBold"/>
                                <TextBlock x:Name="AppPublisher" FontSize="12" Opacity="0.7"/>
                                <TextBlock x:Name="AppVersion" FontSize="12" Opacity="0.7"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Expander>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>